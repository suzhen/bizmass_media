%table.table.table-striped
  %thead
    %tr
      %th 名称
      %th 
      %th
      %th
  %tbody
    - @categories.each do |category|
      %tr
        %td= category.name
        %td= link_to '显示', category
        %td= link_to '编辑', edit_category_path(category)
        %td= link_to '删除', category, :method => :delete, :data => { :confirm => '确定删除吗？' }
